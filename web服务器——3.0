#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <pthread.h>
#include <fcntl.h>
#include <sys/types.h>
#include <sys/socket.h>
#include <sys/stat.h>
#include <netinet/in.h>



#define BACKLOG 10 
#define MAX 1024


int StartUp(int port)
{
	int sock = socket(AF_INET, SOCK_STREAM, 0);
	if(sock == -1)
	{
		perror("socket");
		exit(2);
	}

	struct sockaddr_in local;
	local.sin_family = AF_INET;
	local.sin_addr.s_addr = htonl(INADDR_ANY);
	local.sin_port = htons(port);

	if(bind(sock, (struct sockaddr*)&local, sizeof(local)) == -1)
	{
		perror("bind");
		exit(3);
	}

	if(listen(sock, BACKLOG) == -1)
	{
		perror("listen");
		exit(4);
	}

	return sock;
}

void Usage(const char* argv)
{
	printf("Usage: \n\t%s [port]\n", argv);
}

int Getline(int fd, char buf[])
{
	char ch = 'A';
	int i = 0;
	while(ch != '\n')
	{
		if(read(fd, &ch, 1) < 0)
            return -1;
		if(ch == '\r')
		{
			if(recv(fd, &ch, 1, MSG_PEEK) < 0)
                return -1;
			if(fd == '\n')
			{
				if(read(fd, &ch, 1) < 0)
                    return -1;
			}
			ch = '\n';
		}

		buf[i++] = ch;
	}
    buf[i-1] = 0;
	return i-1;
}

void CleanHead(int fd)
{  
    char buf[MAX];
    Getline(fd, buf);
    while(strcmp(buf, "\0") != 0)
        Getline(fd, buf);
}

void Echo_cgi(int fd, char* method, char* path, char* parameter)
{
    char par[MAX];
    char buf[MAX];
    int content_length = 0;
    if(strcasecmp(method, "GET") == 0)
    {
        strcpy(par, parameter);
        CleanHead(fd);
    }
    else
    {
        while(strncasecmp(buf, "Content-Length", 14) != 0)
            Getline(fd, buf);
        content_length = atoi(buf+15);
        CleanHead(fd);
    }

    setenv("METHOD", method, 1);
    setenv("PATH", path, 1);
    setenv("PARAMETER", par, 1);

    int input[2];
    int output[2];
    pipe(input);
    pipe(output);

    pid_t pid = fork();
    if(pid < 0)
    {}
    else if(pid > 0)   //父进程
    {
        close(input[0]);
        close(output[1]);
    }
    else           //子进程
    {
        close(input[1]);
        close(output[0]);
    }
}
void Echo_err(int errcode)
{}

void *Service(void* arg)
{
	int fd = (int)arg;
	char buf[MAX];
	char method[MAX/32];
	char url[MAX];
    char path[MAX];
	int cgi = 0;
	char *parameter = NULL;
    int errcode = 0;
	int i = 0;
    printf("tid:%d\n", pthread_self());
	if(Getline(fd, buf) == -1)
    {
        errcode = 501;
        goto end;
    }

    //取得方法与url
    for(; buf[i] != ' '; ++i)
    {
        method[i] = buf[i];
    }
    method[i++] = 0;
    while(buf[i] == ' ')
        ++i;
    int idx = 0;
    while(buf[i] != ' ')
        url[idx++] = buf[i++];
    url[idx] = 0;

    //解析方法
    if(strcasecmp(method, "GET") == 0)   //GET方法
    {
        parameter = url;
        while(*parameter != '\0')
        {
            if(*parameter == '?')
                break;
            ++parameter;
        }
        if(*parameter == '?')
        {
            *parameter = '\0';
            ++parameter;
            strcpy(par, parameter);
            cgi = 1;
        }
    }
    else if(strcasecmp(method, "POST") == 0)  //POST方法
    {
        cgi = 1;
    }
    else
    {
        errcode = 404;
        goto end;
    }

    sprintf(path, "wwwroot%s", url);
    if(path[strlen(path)-1] == '/')
        strcat(path, "home_page.html");
    printf("method:%s\n", method);
    printf("path:%s\n", path);
    
    //处理
    if(cgi)    //cgi模式
    {
        Echo_cgi(fd, method, path, parameter);
    }
    else       //非cgi模式
    {
        char buf[MAX];
        int filefd = open(path, O_RDONLY);
        sprintf(buf, "HTTP/1.0 200 OK\nContent-Type:text/html;charset=UTF-8\n\n");
        write(fd, buf, strlen(buf));

        struct stat st;
        fstat(filefd, &st);

        sendfile(fd, filefd, 0, st.st_size);

        close(filefd);
    }


end:
    if(errcode != 200)
        Echo_err(errcode);

    close(fd);
}

int main(int argc, char* argv[])
{
	if(argc != 2)
	{
		Usage(argv[0]);
		exit(1);
	}
	
	int listen_sock = StartUp(atoi(argv[1]));

	struct sockaddr_in client_addr;
	socklen_t len = sizeof(client_addr);
	for(;;)
	{
		int client_sock = accept(listen_sock, (struct sockaddr*)&client_addr, &len);

		pthread_t tid;
		pthread_create(&tid, NULL, Service, (void*)client_sock);
		pthread_detach(tid);
	}

	return 0;
}
